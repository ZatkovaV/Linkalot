<div class="header flex_col">
  <%= @study_group.name %>
</div>


<div class="flex_col">

  <div class="flex_col add_new_box">
    <%= link_to 'Add new link', new_link_path(:group_id => @study_group.id) %>
  </div>

  <div class="links_box">
    <div class="links_rows">
      <% @links.each do |link| %>
          <div class="links_cols flex_col">
            <div><%= link.title %></div>
            <div><%= link.url %></div>
            <div><%= link.description %></div>
            <div><%= link.study_group_id %></div>
            <div><%= link.keywords %></div>
            <div><%= link_to 'Destroy', link, method: :delete %></div>
            <div><%= render partial: 'votes/form', locals: {vote: @vote, vote_value: -1, link_id: link.id} %></div>
            <div><%= render partial: 'votes/form',  locals: {vote: @vote, vote_value: -1, link_id: link.id} %></div>
          </div>
      <% end %>
    </div>
  </div>

  <%= will_paginate @links %>

</div>

